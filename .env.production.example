# ===========================================
# ROLHACK - Production Environment Variables
# ===========================================
# Copy to .env.production and fill in values
# DO NOT commit .env.production to git

# ===========================================
# AUTENTICACION (NextAuth.js v5)
# ===========================================
AUTH_SECRET="<generate with: openssl rand -base64 32>"
AUTH_TRUST_HOST=true
AUTH_URL="https://rolhack.euforiateclog.cloud"
NEXT_PUBLIC_APP_URL="https://rolhack.euforiateclog.cloud"

# ===========================================
# GOOGLE OAUTH
# ===========================================
GOOGLE_CLIENT_ID="<from Google Cloud Console>"
GOOGLE_CLIENT_SECRET="<from Google Cloud Console>"

# ===========================================
# RBAC: SUPERADMIN BOOTSTRAP
# ===========================================
# Usuarios con estos emails seran promovidos a SUPERADMIN automaticamente
SUPERADMIN_EMAILS="euforiateclog@gmail.com"

# ===========================================
# SEED DEMO (opcional)
# ===========================================
# Crear proyecto demo con circuito de ejemplo al ejecutar seed
# SEED_DEMO=true
